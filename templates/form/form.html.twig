{% extends 'base.html.twig' %}

{% block title %}Form{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h1>Date and Timezone Form</h1>

    <form method="POST">
        <label for="date">Date (Y-m-d):</label>
        <input type="text" id="date" name="date" required>

        <label for="timezone">Timezone:</label>
        <input type="text" id="timezone" name="timezone" required>

        <button type="submit">Submit</button>
    </form>

    {% if errors is not empty %}
        <div>
            <ul>
                {% for error in errors %}
                    <li>{{ error.message }}</li>
                {% endfor %}
            </ul>
        </div>
    {% elseif result is not null %}
        <div>
            <p>The timezone {{ result.timezone }} has {{ result.offset }} minutes offset to UTC on the given day at noon.</p>
            <p>February in this year is {{ result.daysInFebruary }} days long.</p>
            <p>The specified month {{ result.monthName }} is {{ result.daysInMonth }} days long.</p>
        </div>
    {% endif %}

</div>
{% endblock %}